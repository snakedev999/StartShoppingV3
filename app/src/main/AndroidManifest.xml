<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goldenapps.startshopping">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StartShopping">
        <activity
            android:name=".ui.carrito.SetupActivity"
            android:exported="true" />
        <activity
            android:name=".ui.carrito.ConfirmarOrdenActivity"
            android:exported="true" />
        <activity
            android:name=".ui.carrito.CarritoActivity"
            android:exported="true" />
        <activity
            android:name=".ui.productoDetalle.ProductoCategoriaActivity"
            android:exported="true" />
        <activity
            android:name=".registros.SeleccionComunaActivity"
            android:exported="true" />
        <activity
            android:name=".registros.RegistroComunaActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SpinnerActivity"
            android:exported="true" />
        <activity
            android:name=".registros.RegistroRegionActivity"
            android:exported="true" />
        <activity
            android:name=".registros.RegistroProductoActivity"
            android:exported="true" />
        <activity
            android:name=".ui.productoDetalle.DetalleActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registros.RegistroCategoriaActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.account.LoadingAccountActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.menu.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>