<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registros.RegistroProductoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_marcaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Marca"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/imageProducto"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/imageProducto"
            app:layout_constraintTop_toBottomOf="@+id/imageProducto" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registro Productos"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edt_marcaProducto"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edt_marcaProducto"
            app:layout_constraintTop_toBottomOf="@+id/edt_marcaProducto" />

        <EditText
            android:id="@+id/edt_precioProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Precio"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edt_nombreProducto"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edt_nombreProducto"
            app:layout_constraintTop_toBottomOf="@+id/edt_nombreProducto" />

        <Button
            android:id="@+id/btn_registrarProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Registrar"
            app:layout_constraintEnd_toEndOf="@+id/edt_precioProducto"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="@+id/edt_precioProducto"
            app:layout_constraintTop_toBottomOf="@+id/edt_precioProducto" />

        <ImageView
            android:id="@+id/imageProducto"
            android:layout_width="175dp"
            android:layout_height="185dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:srcCompat="@drawable/ic_baseline_add_photo_alternate_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>