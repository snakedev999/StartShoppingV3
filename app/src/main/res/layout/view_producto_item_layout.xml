<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:background="@drawable/card_productv">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="156dp"
            android:layout_height="144dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/tvage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvage"
            app:layout_constraintTop_toBottomOf="@+id/tvage"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvlastName"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Stark"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/tvage"
            android:layout_width="128dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/acme"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageCarritoAdd_productoView"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imagenFav"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_baseline_star_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageCarritoAdd_productoView"
            app:layout_constraintTop_toBottomOf="@+id/imageCarritoAdd_productoView" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>